<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_logo_yangju" />

            <TextView
                android:id="@+id/tv_title_parking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:text="양주시 주차장"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="50dp">

                <android.widget.Button
                    android:id="@+id/btn_move_parking_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주차장 현황 보기"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bg_main_button" />

                <android.widget.Button
                    android:id="@+id/btn_move_parking_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:text="지도에서 보기"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bg_main_button" />

                <android.widget.Button
                    android:id="@+id/btn_move_parking_star"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:text="즐겨찾는 주차장"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/bg_main_button" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
